{
  "name": "htask",
  "version": "1.0.4",
  "description": "CMD任务管理器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron . -t",
    "build_mac": "export LANG=zh_CN.UTF-8 && electron-builder build --mac --arm64"
  },
  "keywords": [
    "markdown"
  ],
  "build": {
    "productName": "htask",
    "appId": "top.newham.htask",
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "./assets/img/icons8-cmd-256(Mac).icns",
      "target": {
        "target": "dir",
        "arch": "arm64"
      }
    }
  },
  "author": "newham",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  }
}