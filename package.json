{
  "name": "htask",
  "version": "1.0.0",
  "description": "CMD任务管理器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron . -t",
    "build_mac": "electron-builder build --mac --arm64",
    "build:css": "tailwindcss build styles.css -o dist/output.css"
  },
  "keywords": [
    "markdown"
  ],
  "build": {
    "productName": "htask",
    "appId": "top.newham.htask",
    "directories": {
      "output": "build"
    },
    "fileAssociations": [
      {
        "ext": [
          "md"
        ],
        "description": "Markdown File",
        "role": "Viewer",
        "isPackage": false,
        "icon": "./assets/img/icons8-file-md-120.icns"
      }
    ],
    "mac": {
      "icon": "./assets/img/icon.icns",
      "target": {
        "target": "dmg",
        "arch": "arm64"
      }
    }
  },
  "author": "newham",
  "license": "ISC",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "tailwindcss": "^4.0.12"
  },
  "dependencies": {
    "xterm": "^5.3.0"
  }
}